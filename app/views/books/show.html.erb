<%= render 'layouts/application' %>
<h2>Book detail</h2>
<table>
    <tbody>
      <tr>
      	<td class="image"><%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image.jpg" %></td>
        <td class="title"><%= link_to @books.title, book_path(@books) %></td>
        <td class="body"><%= @books.body %></td>
        <td>
        <%= link_to"Edit", edit_book_path(@books) %>
        <%= link_to"Destroy", book_path(@books), method: :delete, "data-confirm" =>"Are you sure?" %>
        </td>
      </tr>
      <tr>
        <td class="user_name"><%= link_to @user.name, user_path(@user) %>
    </tbody>
</table> 



