<div class="page-header"></div>

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
    <div class="col-xs-3">
  <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no_image_100.jpg" %>
        
      <table class="table" style="table-layout:fixed;width:100%;">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th style="word-wrap:break-word;"><%=@user.introduction %></th>
          </tr>
        </tbody>
    </table>
    <div class="row"><%= link_to"", edit_user_path(@user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %></div>
   

  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <h2>New Books</h2>
    <%= form_for(Book.new) do |f| %>
    <div class="field row">
      <label>Title</label><br>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>

    <div class="field row">
      <label>Body</label><br>
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <br>
    <div class="actions row"><%= f.submit 'Create Book', class:" btn btn-primary col-xs-12" %></div>

<% end %>
</div>

    <div class="col-xs-9">
<h2>Books</h2>
  <table class="table table-hover table-inverse">
  	<thead>
  	  <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
       </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
          <td class="image"><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image_40.jpg" %></td>    
      		<td class="title"><%= link_to book.title, book_path(book.id) %></td>
      		<td class="Body"><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
  </table> 
  </div>
  </div>
  </div>
</div>

