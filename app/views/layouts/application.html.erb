<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Bookers</title>
     <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        	<li class="">
        		<%= link_to " home",user_path(current_user.id),class: 'glyphicon glyphicon-home' %>
        	</li>
        	<li class= "">
          		<%= link_to " Users",users_path, class: 'glyphicon glyphicon-user'%>
        	</li>
        	<li class="">
              <%= link_to " books",books_path, class: 'glyphicon glyphicon-book'%>
        	</li>
        	<li class="">
            	<%= link_to " logout", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out'%>
          </li>
        <% else %>
          <li class="">
              <%= link_to " home", root_path,class: 'glyphicon glyphicon-home'%>
          </li>
          <li class="">
              <%= link_to " About", new_book_path, class: 'glyphicon glyphicon-link'%>
          </li>
          <li class="">
              <%= link_to " Sign Up", new_user_registration_path, class: 'glyphicon glyphicon-edit'%>
          </li>
          <li class="">
              <%= link_to " Sign In", new_user_session_path, class: 'glyphicon glyphicon-log-in'%>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


    <%= yield %>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
