<div class="page-header"></div>

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
    <%= render 'users/userinfo', user: @user %>
    <div class="col-xs-9">
    <h2>Users</h2>

  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image_40.jpg" %>
                </td>
          <td class="user-name"><%= user.name %></td>
          <td><%= link_to"Show", user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </div>
    </div>
  </div>
</div>
