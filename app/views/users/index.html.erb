<h1>Users</h1>
<div class="col-xs-9">
    <h2>Users</h2>

  <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
        <tr>
          <td calss="image"><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image.jpg" %>
          </td>
          <td class="user-name"><%= user.name %></td>
          <td><%= link_to"Show", user_path(user.id) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
</div>
