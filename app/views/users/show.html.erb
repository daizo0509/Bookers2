<div class="page-header"></div>

<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
    <%= render 'users/userinfo', user: @user %>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <tbody>
              <% @books.each do |book| %>
              <% if book.errors.any? %>
              <% end %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image_40.jpg" %>
                </td>
                <td class="title"><%= link_to book.title, book_path(book.id) %></td>
                <td class="body"><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
</div>
