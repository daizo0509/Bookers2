<h1>マイページ</h1>
<div class="side-bar">
  <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image.jpg" %>
      <% if @user.id == current_user.id %>
      <% end %>
    <table class="table">
      <tbody>
      <tr>
        <th>name</th>
        <th><%=@user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%=@user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row"><%= link_to"Edit", edit_user_path(@user.id) %></div>
</div>
<h2>New Books</h2>
<%= form_for(@book) do |f| %>
  <div class="field">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label>Body</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="action"><%= f.submit 'Create Book' %></div>

<% end %> 

<table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <% if book.errors.any? %>
      <% end %>
      <tr>
        <td class="title"><%= link_to book.title, book_path(book.id) %></td>
        <td class="body"><%= book.body %></td>
        <td>

          
          <%= link_to"Edit", edit_book_path(book.id) %>
          <%= link_to"Destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table> 
