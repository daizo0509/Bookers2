<%= render 'layouts/application' %>
<h1>ユーザーページ</h1>
<%= render 'users/userinfo' %>
<%= render 'books/newbook' %>
<table>
  <thead>
    <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <% if book.errors.any? %>
      <% end %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "no_profile-img", fallback: "no_image.jpg" %>
        </td>
        <td class="title"><%= link_to book.title, book_path(book.id) %></td>
        <td class="body"><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
</table> 
