<div class="page-header"></div>
<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
<h2>Users Info</h2>
<%= form_for(@user) do |f| %>
    <div class="field">
    	<label for="name">name</label><br>
    	<%=f.text_field :name %>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="field">
    	<label for="introduction">Introduction</label><br>
    	<%= f.text_area :introduction %>
    </div>

    <div class="action"><%= f.submit 'Update User' %></div>

<% end %>
</div>
</div>
</div>

