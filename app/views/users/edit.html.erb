<div class="page-header"></div>
<div class="body" >
  <div class="container">
    <p id="notice"></p>
    <div class="row">
<h2>Users Info</h2>

<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@user) do |f| %>
    <div class="field">
    	<label for="name">name</label><br>
    	<%=f.text_field :name %>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="field">
    	<label for="introduction">Introduction</label><br>
    	<%= f.text_area :introduction %>
    </div>

    <div class="action"><%= f.submit 'Update User' %></div>

<% end %>
</div>
</div>
</div>

