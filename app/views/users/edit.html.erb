<h2>Users Info</h2>
<%= form_for(@user) do |f| %>
    <div class="field">
    	<label for="name">name</label><br>
    	<%=f.text_field :name %>
    </div>
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.png"%>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="field">
    	<label for="introduction">Introduction</label><br>
    	<%= f.text_field :introduction %>
    </div>

    <div class="action"><%= f.submit 'Update User' %></div>

<% end %>

